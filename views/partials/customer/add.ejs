<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Student</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
          <button class="btn btn-sm btn-outline-primary"><a href="/">Dashboard</a></button>
      </div>
  </div>
</div>
<form action="/add" method="POST">
  <div class="col">
      <label for="Name">Name</label>
      <input type="text" class="form-control custom-input" id="Name" name="Name" value="" placeholder="Name" required>
  </div>
  <div class="col">
      <label for="Nim">Id</label>
      <input type="text" class="form-control custom-input" id="Nim" name="Nim" value="" placeholder="Nomor Induk Mahasiswa" required>
  </div>
  <div class="col">
      <label for="fakultas">Faculty</label>
      <input type="text" class="form-control custom-input" id="fakultas" name="Fakultas" value="" placeholder="Fakultas" required>
  </div>
  <div class="col">
      <label for="jurusan">Department</label>
      <input type="text" class="form-control custom-input" id="jurusan" name="Jurusan" value="" placeholder="jurusan" required>
  </div>
  <div class="col">
      <label for="tel">Telephone Number</label>
      <input type="text" class="form-control custom-input" id="tel" name="tel" value="" placeholder="Telephone" required>
  </div>
  <div class="col">
      <label for="email">Email</label>
      <input type="text" class="form-control custom-input" id="email" name="email" value="" placeholder="Email" required>
  </div>
  <div class="form-group mb-4">
      <label for="details">Student Details</label>
      <textarea class="form-control custom-input" name="details" id="details" cols="30" rows="4" placeholder="Student Details"></textarea>
  </div>
  <div class="form-group mb-4">
      <button type="submit" class="btn btn-outline-success">Add Student</button>
  </div>
</form>
