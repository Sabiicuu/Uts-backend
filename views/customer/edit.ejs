<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"> Editing: <%= customer.Name %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-primary"><a href="/">Dashboard</a></button>
      </div>
    </div>
  </div>
  <div class="col py-3">
    <div class="row">
      <div class="col text-end fw-lighter">
        <b class="detail-student">Last Updated: <%= new Date(customer.updatedAt).toUTCString()  %></b>
        <b class="detail-student">UserId: <%= customer._id %></b> 
      </div>
    </div>
  </div>
  <form action="/edit/<%= customer._id %>?_method=PUT" method="POST">
      <div class="col">
        <label for="firstName"> Name</label>
        <input type="text" class="form-control custom-input" id="firstName" name="Name" value="<%= customer.Name %>" placeholder="Name" required>
      </div>
      <div class="col">
        <label for="lastName">Id</label>
        <input type="text" class="form-control custom-input" id="lastName" name="Nomor induk mahasiswa" value="<%= customer.Nim %>" placeholder="Last Name" required>
      </div>
      <div class="col">
        <label for="tel">Telephone Number</label>
        <input type="text" class="form-control custom-input" id="tel" name="tel" value="<%= customer.tel %>" placeholder="Telephone Number" required>
      </div>
      <div class="col">
        <label for="email">Email</label>
        <input type="text" class="form-control custom-input" id="email" name="email" value="<%= customer.email %>" placeholder="Email" required>
      </div>
      <div class="col">
        <label for="tel">Faculty</label>
        <input type="text" class="form-control custom-input" id="tel" name="Fakultas" value="<%= customer.Fakultas %>" placeholder="Telephone" required>
      </div>
      <div class="col">
        <label for="email">Department</label>
        <input type="text" class="form-control custom-input" id="email" name="Jurusan" value="<%= customer.Jurusan %>" placeholder="Email" required>
      </div>
    <div class="form-group mb-4">
        <label for="details">Student Details</label>
        <textarea class="form-control custom-input" name="details" id="details" cols="30" rows="4" placeholder="Customer Details"><%= customer.details %></textarea>
    </div>
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-outline-primary">Update Student</button>
      <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Student</button>
    </div>
  </form>
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal" style="border: 2px solid white;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header" style="background-color: black;">
          <div class="modal-title" style="color: aliceblue;">You are about to remove a customer record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" style="background-color: black;">
          <p style="color: white;">
            This will remove the Student record of <b class="fw-bold"><%= customer.Name %> </b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer" style="background-color: black;">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-outline-danger">Yes, Remove Student</button>
          </form>
        </div>
      </div>
    </div>
  </div>
