<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= stafff.first_name %> <%= stafff.last_name %> </h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-danger"><a href="/staff">To Staff</a></button>
      </div>
    </div>
  </div>
  
  <div class="col py-3">
  
    <div class="row">
      <div class="col text-end fw-lighter">
        <b class="detail-student">Last Updated: <%= new Date(stafff.updatedAt).toUTCString()  %></b>
        <b class="detail-student">UserId: <%= stafff._id %></b> 
      </div>
    </div>
  
  </div>
  
  <ul class="list-group custom-list">
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>First name:</b></div>
        <div class="col"><%= stafff.first_name %></div>
      </div>
    </li>

    <li class="list-group-item custom-view"> 
      <div class="row ">
        <div class="col" style="max-width: 140px"> <b>Last Name:</b></div>
        <div class="col"><%= stafff.last_name %></div>
      </div>
    </li>
    
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Tel:</b></div>
        <div class="col"><%= stafff.tel %></div>
      </div>
    </li>
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Email:</b></div>
        <div class="col"><%= stafff.email %></div>
      </div>
    </li>

    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Alamat:</b></div>
        <div class="col"><%= stafff.alamat %></div>
      </div>
    </li>

    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> Temoat Dan Tanggal Lahir:</div>
        <div class="col"><%= stafff.tempat_tanggal_lahir %></div>
      </div>
    </li>
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> Job:</div>
        <div class="col"><%= stafff.job %></div>
      </div>
    </li>
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Date Created:</b></div>
        <div class="col"><%= stafff.updateAt %></div>
      </div>
    </li>
  
    <li class="list-group-item custom-view"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Date Modified:</b></div>
        <div class="col"><%= stafff.updateAt %></div>
      </div>
    </li>
  
  </ul>
