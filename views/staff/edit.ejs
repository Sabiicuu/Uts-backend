<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"> Editing: <%= stafff.first_name %>  <%= stafff.last_name %> </h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-primary"><a href="/Dashboard">Dashboard</a></button>
        <button class="btn btn-sm btn-outline-danger"><a href="/staff">To Staff</a></button>
      </div>
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      
      <div class="col text-end fw-lighter">
        <b class="detail-student">Last Updated: <%= new Date(stafff.updatedAt).toUTCString()  %></b>
        <b class="detail-student">UserId: <%= stafff._id %></b> 
      </div>
    </div>
  
  </div>
  
  
  <form action="/staff/edit/<%= stafff._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">

  
        <div class="col">
            <label for="first_name">First Name</label>
            <input type="text" class="form-control custom-input" id="first_name" name="first_name" value="<%= stafff.first_name %>" placeholder="" required>
        </div>
      
        <div class="col">
            <label for="last_name">Last Name</label>
            <input type="text" class="form-control custom-input" id="last_name" name="last_name" value="<%= stafff.last_name %>" placeholder="Last Name" required>
        </div>
    
        </div>
        <div class="row form-group mb-4">
    
      
        <div class="col">
            <label for="id">ID</label>
            <input type="text" class="form-control custom-input" id="id" name="id" value="<%= stafff.id %>" placeholder="Fakultas" required>
        </div>
      
        <div class="col">
            <label for="umur">Umur</label>
            <input type="text" class="form-control custom-input" id="umur" name="umur" value="<%= stafff.umur %>" placeholder="Course" required>
        </div>
    
        </div>
    
        
        <div class="row form-group mb-4">
    
      
            <div class="col">
                <label for="tel">Telephone Number</label>
                <input type="text" class="form-control custom-input" id="tel" name="tel" value="<%= stafff.tel %>" placeholder="Telephone" required>
            </div>
          
            <div class="col">
                <label for="email">Email</label>
                <input type="text" class="form-control custom-input" id="email" name="email" value="<%= stafff.email %>" placeholder="Email" required>
            </div>
        
            </div>
    
        <div class="row form-group mb-4">
    
      
        <div class="col">
            <label for="tempat_tanggal_lahir">Tempat Dan Tanggal Lahir : </label>
            <input type="text" class="form-control custom-input" id="tempat_tanggal_lahir" name="tempat_tanggal_lahir" value="<%= stafff.tempat_tanggal_lahir %>" placeholder="Telephone" required>
        </div>
      
        <div class="col">
            <label for="alamat">Alamat :</label>
            <input type="text" class="form-control custom-input" id="alamat" name="alamat" value="<%= stafff.alamat %>" placeholder="Email" required>
        </div>
    
        </div>
    
        <div class="col">
            <label for="alamat">job :</label>
            <input type="text" class="form-control custom-input" id="job" name="job" value="<%= stafff.job %>" placeholder="Email" required>
        </div>

        <div class="form-group mb-4">
          <button type="submit" class="btn btn-outline-primary">Update Student</button>
      
          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Student</button>
      
        </div>
  
  </form>
  
  
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal" style="border: 2px solid white;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header" style="background-color: black;">
          <div class="modal-title" style="color: aliceblue;">You are about to remove a staff record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" style="background-color: black;">
          <p style="color: white;">
            This will remove the Professor record of <b class="fw-bold"><%= stafff.Name %> </b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer" style="background-color: black;">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/dosen/edit/<%= stafff._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-outline-danger">Yes, Remove staff</button>
          </form>
        </div>
      </div>
    </div>
  </div>
